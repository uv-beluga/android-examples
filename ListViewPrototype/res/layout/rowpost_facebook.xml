<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView 
        android:id="@+id/media_image"
        android:layout_width="30px"
        android:layout_height="30px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />
    
    <TextView
        android:id="@+id/media_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/media_name"
		android:layout_toRightOf="@id/media_image"
        android:textSize="10px" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_fb" >
    </ImageView>
    
    <TextView
        android:id="@+id/posting_ts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/posting_ts"
		android:layout_toLeftOf="@id/icon"
        android:textSize="10px" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/content"
        android:autoLink="web"
        android:layout_below="@id/media_name"
		android:layout_toRightOf="@id/media_image"
        android:textSize="10px" />
    
    <TextView
        android:id="@+id/insert_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/insert_user_name"
        android:layout_below="@id/content"
		android:layout_toRightOf="@id/media_image"
        android:textSize="10px" />

</RelativeLayout>